<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_navmain"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/colorLightBlue"
        android:orientation="vertical"
        android:padding="@dimen/pad_10dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/pad_5dp"
            android:text="@string/txt_bangalore"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_20sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/pad_5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/pad_5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_40sp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="0"
                android:paddingLeft="@dimen/pad_2dp"
                android:paddingBottom="@dimen/pad_10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_20sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_100dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/pad_15dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/pad_5dp"
                    android:text="Max : 30"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_16sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/pad_5dp"
                    android:text="Min : 19"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_16sp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_10dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="@dimen/pad_15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_home"
            android:layout_width="@dimen/pad_26dp"
            android:layout_height="@dimen/pad_26dp"
            app:srcCompat="@drawable/ic_videocamera" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pad_15dp"
            android:text="@string/txt_home"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/txt_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/pad_10dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_10dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="@dimen/pad_15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/pad_26dp"
            android:layout_height="@dimen/pad_26dp"
            app:srcCompat="@drawable/ic_profile" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pad_15dp"
            android:text="@string/txt_editprofile"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/txt_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/pad_10dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/ll_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_10dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="@dimen/pad_15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_logout"
            android:layout_width="@dimen/pad_26dp"
            android:layout_height="@dimen/pad_26dp"
            app:srcCompat="@drawable/ic_logout" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pad_15dp"
            android:text="@string/txt_logout"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/txt_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/pad_10dp"
        android:background="@color/colorDivider" />

</LinearLayout>
